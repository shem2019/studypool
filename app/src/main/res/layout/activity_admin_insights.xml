<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8fc"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Insights"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <!-- Summary Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/activeuserslayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp" android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¥ Active Users"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/activeUsersText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/topcourseslay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="8dp" android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š Top Course"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/topCourseText"
                    android:text="â€”"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Average Session Duration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="â±ï¸ Avg Session Time"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/avgDurationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- XP Growth Chart -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/xpChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <!-- Drop-off users -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš ï¸ Drop-Off Users"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dropOffUsersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No drop-offs today"
                android:textSize="16sp"
                android:paddingTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
