<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Course Name -->
        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Name"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Exam Date -->
        <TextView
            android:id="@+id/examDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exam Date"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- CAT Dates -->
        <TextView
            android:id="@+id/catDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAT Dates"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Class Times -->
        <TextView
            android:id="@+id/classTimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class Times"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- File List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/deleteCourse"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Delete Course" />

</androidx.cardview.widget.CardView>
